:root {
}

.factionButton {
    flex-grow: 0;
    margin-top: 25px;
    margin-right: 25px;
    margin-bottom: 25px;
    margin-left: 25px;
    height: auto;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
    overflow: hidden;
    scale: 1 1 1;
    transition-duration: 0.3s;
}

.factionButton:hover {
    transition-duration: 0.3s;
    scale: 1.2 1.2 1.2;
}

.factionButton:active {
    transition-duration: 0.2s;
    scale: 0.9 0.9 0.9;
}
